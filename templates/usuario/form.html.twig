{% extends "base.html.twig" %}

{% block topo %}

	<div class="topo">
		<div class="logo">
			<img src="{{ asset('_img/logo-digital.png') }}" alt="Logo Digital">
		</div>
		<div class="titulo">CADASTRO SYMFONY</div>
	</div>

{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="{{ asset('_css/style.css') }}"/>

{% endblock %}

{% block title %}

	Cadastro de Usuários

{% endblock %}

{# Formulário de Cadastro #}

{% block body %}
	<div id="form">
		<form method="POST" action="{{ url('web_usuario_salvar') }}">
			<input type="text" name="nome" placeholder="Nome"/>
			<input type="text" name="email" placeholder="E-mail"/>

			<button type="submit">Salvar</button>
		</form>
	</div>
{% endblock %}
